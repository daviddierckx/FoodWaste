@page
@model AvansFysio.Views.RegisterModel
@{
}



<img class="wave" src="https://i.postimg.cc/sDG8zyXM/wave.png">
<div class="container">
    <div class="img">
        <img src="/img/Massage therapist-bro (2).png">
    </div>
    <div class="login-content">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
                <img src="/img/fysiologo.png">
                <h2 class="title">Register</h2>
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        <input placeholder="Email" type="text" asp-for="Model.Email" class="input" />
                    </div>
                </div>
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <input placeholder="Password" type="password" asp-for="Model.Password" class="input" />
                    </div>
                </div>
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <input placeholder="Confirm Password" type="password" asp-for="Model.ConfirmPassword" class="input" />
                    </div>
                </div>
                <br />
                <input type="submit" class="btn" value="Register">
                  <a asp-page="/Login" class="secondary-btn">Login</a>

        </form>
    </div>
</div>
