@model AvansFysio.Models.Beschikbaar

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Beschikbaar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">
                    Beschikbaar?
                </label>
                <input class="form-check" asp-for="BeschikbaarOpDieDag"/>
            </div>
            <div class="form-group">
                <label asp-for="Dag" class="control-label"></label>
                <input asp-for="Dag" class="form-control" />
                <span asp-validation-for="Dag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeginTijd" class="control-label">Begin tijd</label>
                <input asp-for="BeginTijd" class="form-control" />
                <span asp-validation-for="BeginTijd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EindTijd" class="control-label">Eind tijd</label>
                <input asp-for="EindTijd" class="form-control" />
                <span asp-validation-for="EindTijd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
