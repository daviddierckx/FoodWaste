@model AvansFysio.Models.Behandeling

@{
    ViewData["Title"] = "Create";
    var patient = ViewData["ID"];

}

<div style="opacity:0">
    <h1>Create</h1>

    <h4>Behandeling</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" name="behandeling_signup">
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <input asp-for="Type" value="/" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Omschrijving" class="control-label"></label>
                    <input asp-for="Omschrijving" value="/" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="OefenzaalOfBehandel" class="control-label"></label>
                    <input asp-for="OefenzaalOfBehandel" value="/" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Bijzonderheden" class="control-label"></label>
                    <input asp-for="Bijzonderheden" value="/" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="BehandelingUitgevoerdDoor" class="control-label"></label>
                    <input asp-for="BehandelingUitgevoerdDoor" value="/" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="BehandelingUitgevoerdDatum" class="control-label"></label>
                    <input asp-for="BehandelingUitgevoerdDatum" value="/" class="form-control" />
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="PatientId" class="control-label">Patient ID</label>
                        <input asp-for="PatientId" class="form-control" value="@patient" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
<script type="text/javascript">
    window.onload = function () {
        document.forms['behandeling_signup'].submit();
    }
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
