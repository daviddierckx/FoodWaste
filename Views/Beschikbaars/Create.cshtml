@model AvansFysio.Models.Beschikbaar

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Beschikbaar</h4>
<hr />
<div class="row" role="grid">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="BeschikbaarOpDieDag" /> @Html.DisplayNameFor(model => model.BeschikbaarOpDieDag)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Dag" class="control-label"></label>
                <input asp-for="Dag" class="form-control" />
                <span asp-validation-for="Dag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeginTijd" class="control-label"></label>
                <input asp-for="BeginTijd" class="form-control" />
                <span asp-validation-for="BeginTijd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EindTijd" class="control-label"></label>
                <input asp-for="EindTijd" class="form-control" />
                <span asp-validation-for="EindTijd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
