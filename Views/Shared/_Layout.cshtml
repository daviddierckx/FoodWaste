@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Avans Fysio</title>
    <link rel="icon" href="~/img/fysiologo.png">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/menu.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css">
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/css/site.css" />


</head>
<body>
    <header>

        <div class="sidebar-container">
            <div class="sidebar-logo">
                <img alt="fysio logo" src="~/img/fysiologo.png" style="width:50px;" />
                <span>Avans Fysio</span>
            </div>
            <ul class="sidebar-navigation">
                <li>
                    <a asp-controller="Home" asp-action="Index" style="border-top: 1px solid black">
                        <i class="fas fa-home" aria-hidden="true"></i>Home
                    </a>
                </li>
                @if (User.IsInRole("Therapeut") || User.IsInRole("Stagiar"))
                {

                    <li>
                        <a asp-controller="Patient" asp-action="Index">
                            <i class="fa fa-address-book" aria-hidden="true"></i>Register
                        </a>
                    </li>
                }
                @if (User.IsInRole("Therapeut") || User.IsInRole("Stagiar"))
                {

                    <li>
                        <a asp-controller="Beschikbaars" asp-action="Index">
                            <i class="fas fa-calendar-week" aria-hidden="true"></i>Agenda
                        </a>
                    </li>
                }
              
                    <li>
                        <a asp-controller="Patient" asp-action="Index">
                            <i class="fas fa-calendar-check" aria-hidden="true"></i>Mijn afspraken
                        </a>
                    </li>
                


            </ul>

            <a asp-page="/Logout" class="logout">
                <i class="fas fa-sign-out-alt" aria-hidden="true"></i> Sign out
            </a>

        </div>
        @{
            var user = await UserManager.GetUserAsync(User);


        }
        <div class="nav-bar">
            <div class="nav-bar-items">
                <div style="float:right;">
                    @if (User.IsInRole("Therapeut"))
                    {
                        <p style="">Aantal patientent vandaag: @await Component.InvokeAsync("Patients")</p>

                    }
                    <br />
                    @if (user != null)
                    {
                    <p>Hallo, @user.UserName</p>
                    }
                </div>

            </div>


        </div>
        <div class="content-container">
            <div class="container-fluid">

                <!-- Main component for a primary marketing message or call to action -->
                <div class="jumbotron">
                    @RenderBody()
                </div>

            </div>
        </div>






    </header>

    <script src="~/js/site.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
