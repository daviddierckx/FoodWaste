@model AvansFysio.Models.Behandelplan

@{
    ViewData["Title"] = "Edit";
    var patient = ViewData["Vektislijst"];

}

<h1>Edit</h1>

<h4>Behandelplan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="BehandelPlanNaam" class="control-label">Behandelplan naam
               </label>
                <input asp-for="BehandelPlanNaam" class="form-control" />
                <span asp-validation-for="BehandelPlanNaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duur" class="control-label"></label>
                <input asp-for="Duur" class="form-control" />
                <span asp-validation-for="Duur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hoeveel" class="control-label"></label>
                <input asp-for="Hoeveel" class="form-control" />
                <span asp-validation-for="Hoeveel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label">Patient ID</label>
                <input asp-for="PatientId" value="@Model.PatientId"  readonly class="form-control" />
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a href="~/patient/details/@Model.PatientId">Terug naar gebruiker</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
